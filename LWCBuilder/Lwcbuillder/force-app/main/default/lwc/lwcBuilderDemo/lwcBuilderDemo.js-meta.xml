<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
	<apiVersion>57.0</apiVersion>
	<isExposed>true</isExposed>
	<masterLabel>Lwc builder demo</masterLabel>
	<description>Testing the LWC builder extension</description>
	<targets>
		<target>lightning__AppPage</target>
		<target>lightning__HomePage</target>
		<target>lightning__RecordPage</target>
		<target>lightningCommunity__Page</target>
	</targets>
	<targetConfigs>
		<targetConfig targets="lightning__AppPage">
			<supportedFormFactors>
				<supportedFormFactor type="Small"/>
				<supportedFormFactor type="Large"/>
			</supportedFormFactors>
		</targetConfig>
		<targetConfig targets="lightning__HomePage">
			<property name="title" type="String" default="LWC Builder Demo" description="Title of component" label="Title" required="true" />
			<property name="show" type="Boolean" default="false" description="Hide and show title" label="Show" />
			<supportedFormFactors>
				<supportedFormFactor type="Large"/>
			</supportedFormFactors>
		</targetConfig>
		<targetConfig targets="lightning__RecordPage">
			<supportedFormFactors>
				<supportedFormFactor type="Small"/>
				<supportedFormFactor type="Large"/>
			</supportedFormFactors>
		</targetConfig>
	</targetConfigs>
</LightningComponentBundle>